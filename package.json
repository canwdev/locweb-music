{
  "name": "locweb-music",
  "version": "0.1.0",
  "description": "A web music player for playing local music",
  "main": "index.js",
  "repository": "https://github.com/canwdev/locweb-music.git",
  "author": "canwdev <c2097@live.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production PORT=12021 node index.js",
    "dev": "nodemon index.js --trace-sync-io",
    "mongo:start": "docker run --name localweb-music-mongo -p 27017:27017 mongo & sleep 5",
    "mongo:stop": "docker stop localweb-music-mongo && docker rm localweb-music-mongo"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "mongoose": "^5.11.14",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "music-metadata": "^7.6.4",
    "sequelize": "^6.3.4",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  },
  "nodemonConfig": {
    "ignore": [
      "db/*.db",
      "db/*.db-journal",
      "public/*",
      "frontend/*",
      "crawler/*"
    ]
  }
}
